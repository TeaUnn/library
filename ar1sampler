# ar1sampler samples from a
# first-order autoregressive model (AR(1))
# with normal noise

ar1sampler <- function(t,       # sample size
                       mu,      # mean of x
                       phi,     # dependency parameter
                       sigma2){ # variance of error term
  x <- mu
  for(i in 2:t){
    x[i] <- rnorm(1,
                  mu + phi * (x[i-1] - mu),
                  sigma2)
  }
  return(x)
}

